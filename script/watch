#!/usr/bin/env coffee

chokidar = require 'chokidar'
sys = require 'sys'
exec = require('child_process').exec
growl = require 'growl'

puts = (error, stdout, stderr) ->
  sys.puts(stdout); sys.puts(stderr);

buildAll = ->
  exec "make build-all", (err, stdout, stderr) ->
    title = 'Build Status'
    h = "----------------------------------------"
    sep = h + h
    if err?.code > 0
      fail = '⌦⌦⌦ FAILURE ⌫⌫⌫'
      growl fail, {title: title}
      console.log fail
      # console.log err
      console.log stdout
      console.log stderr
      console.log sep
    else
      succeed = '✓✓✓ Success ✓✓✓'
      growl succeed, {title: title}
      console.log succeed
      console.log stdout
      console.log sep


watcher = chokidar.watch 'src', {persistent: true, ignored: /(^\.|.*\.js$)/}
watcher.add 'test'

# Run it once at start; don't use 'add' with chokidar,
# bc it runs for every add event
buildAll()

watcher
  .on('change', buildAll)
  .on('unlink', buildAll)
  .on('error', (error) -> console.log "An error occurred:", error)
